{
  "fields": [
    {
      "type": "input",
      "inputType": "color",
      "placeholder": "iconcolor",
      "label": "Icon Color",
      "model": "iconcolor"
    },
    {
      "type": "input",
      "inputType": "range",
      "placeholder": "iconsize",
      "label": "Icon Size",
      "model": "iconsize",
      "max": 150
    },
    {
      "type": "collection",
      "multifield": true,
      "fieldLabel": [
        "icon",
        "value"
      ],
      "fields": [
        {
          "type": "iconbrowser",
          "placeholder": "icon",
          "label": "Icon Chooser",
          "model": "icon",
          "hint": "Select an icon.",
          "required": true,
          "validator": "required",
          "families": [
            "material",
            "font awesome"
          ]
        },
        {
          "type": "pathbrowser",
          "browserRoot": "/content/sites",
          "placeholder": "url",
          "label": "Icon Url",
          "model": "url"
        }
      ],
      "placeholder": "icons",
      "label": "Icons",
      "model": "icons"
    }
  ]
}