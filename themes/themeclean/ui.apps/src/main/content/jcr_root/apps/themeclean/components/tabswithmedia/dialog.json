{
  "fields": [
    {
      "type": "materialswitch",
      "textOn": "yes",
      "textOff": "no",
      "valueOn": "true",
      "valueOff": "false",
      "placeholder": "showtitle",
      "label": "Show Title",
      "model": "showtitle"
    },
    {
      "type": "input",
      "inputType": "text",
      "placeholder": "title",
      "label": "Title",
      "model": "title",
      "visible": "model.showtitle == 'true'"
    },
    {
      "type": "materialswitch",
      "textOn": "yes",
      "textOff": "no",
      "valueOn": "true",
      "valueOff": "false",
      "placeholder": "showsubtitle",
      "label": "Show Subtitle",
      "model": "showsubtitle"
    },
    {
      "type": "input",
      "inputType": "text",
      "placeholder": "subtitle",
      "label": "Subtitle",
      "model": "subtitle",
      "visible": "model.showsubtitle == 'true'"
    },
    {
      "type": "material-radios",
      "values": [
        {
          "name": "Image",
          "value": "image"
        },
        {
          "name": "Video",
          "value": "video"
        }
      ],
      "placeholder": "mediatype",
      "label": "Media type",
      "model": "mediatype"
    },
    {
      "type": "pathbrowser",
      "browserRoot": "/content/assets",
      "placeholder": "imagesrc",
      "label": "Image Source",
      "model": "imagesrc",
      "visible": "model.mediatype == 'image'"
    },
    {
      "type": "pathbrowser",
      "browserRoot": "/content/assets",
      "placeholder": "videosrc",
      "label": "Video Source",
      "model": "videosrc",
      "visible": "model.mediatype == 'video'"
    },
    {
      "type": "input",
      "inputType": "range",
      "placeholder": "mediawidth",
      "label": "Width",
      "model": "mediawidth",
      "min": 10,
      "max": 100
    },
    {
      "type": "input",
      "inputType": "text",
      "placeholder": "mediacaption",
      "label": "Caption",
      "model": "mediacaption"
    },
    {
      "type": "collection",
      "multifield": true,
      "fieldLabel": [
        "title",
        "value"
      ],
      "fields": [
        {
          "type": "input",
          "inputType": "text",
          "placeholder": "title",
          "label": "Tab Title",
          "model": "title"
        },
        {
          "type": "texteditor",
          "rows": 10,
          "placeholder": "text",
          "label": "Tab Text",
          "model": "text"
        }
      ],
      "placeholder": "tabs",
      "label": "Tabs",
      "model": "tabs"
    },
    {
      "type": "material-radios",
      "values": [
        {
          "name": "Light",
          "value": "light"
        },
        {
          "name": "Dark",
          "value": "dark"
        }
      ],
      "placeholder": "colorscheme",
      "label": "Block Color Scheme",
      "model": "colorscheme"
    },
    {
      "type": "material-radios",
      "values": [
        {
          "name": "Image",
          "value": "image"
        },
        {
          "name": "Color",
          "value": "color"
        },
        {
          "name": "Gradient",
          "value": "gradient"
        },
        {
          "name": "Video",
          "value": "video"
        }
      ],
      "placeholder": "backgroundtype",
      "label": "Background Type",
      "model": "backgroundtype"
    },
    {
      "type": "pathbrowser",
      "browserRoot": "/content/assets",
      "placeholder": "bgvideo",
      "label": "Background Video",
      "model": "bgvideo",
      "visible": "model.backgroundtype == 'video'"
    },
    {
      "type": "pathbrowser",
      "browserRoot": "/content/assets",
      "placeholder": "bgimage",
      "label": "Background Image",
      "model": "bgimage",
      "visible": "model.backgroundtype == 'image'"
    },
    {
      "type": "materialswitch",
      "textOn": "yes",
      "textOff": "no",
      "valueOn": "true",
      "valueOff": "false",
      "placeholder": "overlay",
      "label": "Overlay",
      "model": "overlay",
      "visible": "model.backgroundtype == 'image'"
    },
    {
      "type": "input",
      "inputType": "color",
      "placeholder": "overlaycolor",
      "label": "Overlay Color",
      "model": "overlaycolor",
      "visible": "model.overlay == 'true' and model.backgroundtype == 'image'"
    },
    {
      "type": "input",
      "inputType": "range",
      "placeholder": "overlayopacity",
      "label": "Overlay opacity",
      "model": "overlayopacity",
      "visible": "model.overlay == 'true' and model.backgroundtype == 'image'",
      "max": 100
    },
    {
      "type": "input",
      "inputType": "color",
      "placeholder": "bgcolor",
      "label": "Background Color",
      "model": "bgcolor",
      "visible": "model.backgroundtype == 'color' or model.backgroundtype == 'gradient'"
    },
    {
      "type": "input",
      "inputType": "color",
      "placeholder": "color2",
      "label": "Color 2",
      "model": "color2",
      "visible": "model.backgroundtype == 'gradient'"
    },
    {
      "type": "materialswitch",
      "textOn": "yes",
      "textOff": "no",
      "valueOn": "true",
      "valueOff": "false",
      "placeholder": "fullwidth",
      "label": "Full Width",
      "model": "fullwidth"
    },
    {
      "type": "materialswitch",
      "textOn": "yes",
      "textOff": "no",
      "valueOn": "true",
      "valueOff": "false",
      "placeholder": "fullheight",
      "label": "Full Height",
      "model": "fullheight"
    },
    {
      "type": "input",
      "inputType": "range",
      "placeholder": "toppadding",
      "label": "Top Padding",
      "model": "toppadding",
      "visible": "model.fullheight != 'true'",
      "max": 120
    },
    {
      "type": "input",
      "inputType": "range",
      "placeholder": "bottompadding",
      "label": "Bottom Padding",
      "model": "bottompadding",
      "visible": "model.fullheight != 'true'",
      "max": 150
    }
  ]
}