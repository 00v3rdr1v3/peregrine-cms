                           jcr:description="Learn on how to manage peregrine-cms instances"
                           action="/content/admin/pages"/>

            </row>

        </content>

        <jsonview jcr:primaryType="nt:unstructured"
                  sling:resourceType="admin/components/debugger" dataFrom="/"/>

