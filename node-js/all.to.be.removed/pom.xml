    <profiles>
        <profile>
            <id>autoInstallWCMIO</id>
            <build>
                <plugins>
                    <!-- Copy the Bundles and Packages to the right target folders -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <version>3.0.0</version>
                        <executions>
                            <execution>
                                <id>copy</id>
                                <phase>process-resources</phase>
                                <goals>
                                    <goal>copy</goal>
                                </goals>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>${project.groupId}</groupId>
                                            <artifactId>sling-node-services</artifactId>
                                            <version>${project.version}</version>
                                            <type>jar</type>
                                            <overWrite>true</overWrite>
                                            <outputDirectory>${project.build.outputDirectory}/jcr_root/apps/node/install/</outputDirectory>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>${project.groupId}</groupId>
                                            <artifactId>sling-node-script-services</artifactId>
                                            <version>${project.version}</version>
                                            <type>jar</type>
                                            <overWrite>true</overWrite>
                                            <outputDirectory>${project.build.outputDirectory}/jcr_root/apps/node/install/</outputDirectory>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>${project.groupId}</groupId>
                                            <artifactId>sling-node-view</artifactId>
                                            <version>${project.version}</version>
                                            <type>zip</type>
                                            <overWrite>true</overWrite>
                                            <outputDirectory>${project.build.outputDirectory}/jcr_root/etc/packages/com.headwire.sling</outputDirectory>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>${project.groupId}</groupId>
                                            <artifactId>sling-node-script</artifactId>
                                            <version>${project.version}</version>
                                            <type>zip</type>
                                            <overWrite>true</overWrite>
                                            <outputDirectory>${project.build.outputDirectory}/jcr_root/etc/packages/com.headwire.sling</outputDirectory>
                                        </artifactItem>
                                    </artifactItems>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-assembly-plugin</artifactId>
                        <version>3.0.0</version>
                        <configuration>
                            <descriptors>
                                <descriptor>src/assembly/zip-assembly.xml</descriptor>
                            </descriptors>
                            <!-- Prevent the addition of the assembly id to the file name -->
                            <appendAssemblyId>false</appendAssemblyId>
                        </configuration>
                        <executions>
                            <execution>
                                <id>make-assembly</id> <!-- this is used for inheritance merges -->
                                <phase>package</phase> <!-- bind to the packaging phase -->
                                <goals>
                                    <goal>single</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <!-- Upload the File to Sling -->
                    <plugin>
                        <groupId>io.wcm.maven.plugins</groupId>
                        <artifactId>wcmio-content-package-maven-plugin</artifactId>
                        <version>1.4.3-SNAPSHOT</version>
                        <extensions>true</extensions>
                        <configuration>
                            <serviceURL>http://${sling.host}:${sling.port}/bin/cpm/package.service.html</serviceURL>
                            <userId>admin</userId>
                            <password>admin</password>
                            <force>true</force>
                            <!-- This prevents the plugin from testing the bundle to up and running (does not work with Composum) -->
                            <bundleStatusURL>-</bundleStatusURL>
                        </configuration>
                        <executions>
                            <execution>
                                <id>install-package</id>
                                <goals>
                                    <goal>install</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>autoInstallAEMWCMIO</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>io.wcm.maven.plugins</groupId>
                        <artifactId>wcmio-content-package-maven-plugin</artifactId>
                        <version>1.4.3-SNAPSHOT</version>
                        <configuration>
                            <serviceURL>http://${sling.host}:${aem.port}${aemPackageManagerUri}</serviceURL>
                            <userId>admin</userId>
                            <password>admin</password>
                            <force>true</force>
                            <!-- This prevents the plugin from testing the bundle to up and running (does not work with Composum) -->
                            <bundleStatusURL>-</bundleStatusURL>
                        </configuration>
                        <executions>
                            <execution>
                                <id>install-package</id>
                                <goals>
                                    <goal>install</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>autoInstallAll</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.day.jcr.vault</groupId>
                        <artifactId>content-package-maven-plugin</artifactId>
                        <configuration>
                            <targetURL>http://${sling.host}:${sling.port}${packageManagerUri}</targetURL>
                            <userId>${sling.user}</userId>
                            <password>${sling.password}</password>
                            <useProxy>false</useProxy>
                            <failOnError>true</failOnError>
                            <failOnMissingEmbed>true</failOnMissingEmbed>
                        </configuration>
                        <executions>
                            <execution>
                                <id>install-package</id>
                                <goals>
                                    <goal>install</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>autoInstallAllAEM</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.day.jcr.vault</groupId>
                        <artifactId>content-package-maven-plugin</artifactId>
                        <configuration>
                            <targetURL>http://${sling.host}:${aem.port}${aemPackageManagerUri}</targetURL>
                            <userId>${sling.user}</userId>
                            <password>${sling.password}</password>
                            <useProxy>false</useProxy>
                            <failOnError>true</failOnError>
                            <failOnMissingEmbed>true</failOnMissingEmbed>
                        </configuration>
                        <executions>
                            <execution>
                                <id>install-package</id>
                                <goals>
                                    <goal>install</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
